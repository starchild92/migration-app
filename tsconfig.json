{
	"compileOnSave": false,
	"compilerOptions": {
		"importHelpers": true,
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2017",
			"dom"
		],
		"module": "es2015",
		"baseUrl": "./",
		"paths": {
			"@app/*": [
				"app/*"
			],
			"@components/*": [
				"src/app/components/*"
			],
			"@models/*": [
				"src/app/models/*"
			],
			"@classes/*": [
				"src/app/classes/*"
			],
			"@services/*": [
				"src/app/services/*"
			],
			"@directives/*": [
				"src/app/directives/*"
			],
			"@interfaces/*": [
				"src/app/interfaces/*"
			],
			"@guards/*": [
				"src/app/guards/*"
			],
			"@modules/*": [
				"src/app/modules/*"
			],
			"@env/*": [
				"src/environments/*"
			]
		}
	}
}
