{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"outDir": "../out-tsc/app",
		"baseUrl": "./",
		"paths": {
			"@components/*": ["app/components/*"],
			"@models/*": ["app/models/*"],
			"@classes/*": ["app/classes/*"],
			"@services/*": ["app/services/*"],
			"@directives/*": ["app/directives/*"],
			"@interfaces/*": ["app/interfaces/*"],
			"@guards/*": ["app/guards/*"],
			"@modules/*": ["app/modules/*"],
			"@env/*": ["environments/*"]
		},
		"module": "es2015",
		"types": [
			"node"
		]
	},
	"exclude": [
		"test.ts",
		"**/*.spec.ts"
	]
}
